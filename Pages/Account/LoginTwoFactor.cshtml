@page
@model LoginTwoFactorModel
@{
}


<h3>Please enter the code from your email:</h3>
<div class="container card">
    <div class="card-body">
        <form method="post">
            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="form-group row mb-3">
                <div class="col-2">
                    <label asp-for="EmailMFA.SecurityCode"></label>
                </div>
                <div class="col-5">
                    <input type="password" class="form-control" asp-for="EmailMFA.SecurityCode">
                    <span class="text-danger" asp-validation-for="EmailMFA.SecurityCode"></span>
                </div>
            </div>

            <div class=" row my-2">
                <div class="col-5">
                    <input type="submit" class="btn btn-primary btn-block" value="Verify">
                </div>
                <div class="col-5">
                    <input type="hidden" asp-for="EmailMFA.RememberMe"/>
                </div>
            </div>
        </form>
    </div>

</div>