@page
@model RegisterModel
@{
}

<h3>User Registration</h3>

<div class="container card">
    <div class="card-body">
        <form method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="mb-3 form-group row">
                <div class="col-2">
                    <label asp-for="RegisterViewModel.Email"></label>
                </div>
                <div class="col-5">
                    <input type="text" class="form-control" asp-for="RegisterViewModel.Email">
                    <span class="text-danger" asp-validation-for="RegisterViewModel.Email"></span>
                </div>
            </div>

            <div class="mb-3 form-group row">
                <div class="col-2">
                    <label asp-for="RegisterViewModel.Department"></label>
                </div>
                <div class="col-5">
                    <input type="text" class="form-control" asp-for="RegisterViewModel.Department">
                    <span class="text-danger" asp-validation-for="RegisterViewModel.Department"></span>
                </div>
            </div>

            <div class="mb-3 form-group row">
                <div class="col-2">
                    <label asp-for="RegisterViewModel.Position"></label>
                </div>
                <div class="col-5">
                    <input type="text" class="form-control" asp-for="RegisterViewModel.Position">
                    <span class="text-danger" asp-validation-for="RegisterViewModel.Position"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-2">
                    <label asp-for="RegisterViewModel.Password"></label>
                </div>
                <div class="col-5">
                    <input type="password" class="form-control" asp-for="RegisterViewModel.Password">
                    <span class="text-danger" asp-validation-for="RegisterViewModel.Password"></span>
                </div>
            </div>

            <div class=" row my-2">
                <div class="col-5">
                    <input type="submit" class="btn btn-primary btn-block" value="Register">
                </div>

                <div class="col-5">
                    <a class="btn btn-link" href="/Account/Login">Sign In</a>
                </div>
            </div>
        </form>
    </div>

</div>