@page
@model WebApp.Pages.Account.LoginModel
@{
}

<h3>User Login</h3>
<div class="container card">
    <div class="card-body">
        <form method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="mb-3 form-group row">
                <div class="col-2">
                    <label asp-for="Credential.Email"></label>
                </div>
                <div class="col-5">
                    <input type="text" class="form-control" asp-for="Credential.Email">
                    <span class="text-danger" asp-validation-for="Credential.Email"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-2">
                    <label asp-for="Credential.Password"></label>
                </div>
                <div class="col-5">
                    <input type="password" class="form-control" asp-for="Credential.Password">
                    <span class="text-danger" asp-validation-for="Credential.Password"></span>
                </div>
            </div>

            <div class="form-check row mb-3">
               
                <div class="col-5">
                    <input type="checkbox" class="form-check-input" asp-for="Credential.RememberMe">
                    <label class="form-check-label" asp-for="Credential.RememberMe"></label>
                </div>
            </div>

            <div class=" row my-2">
                <div class="col-5">
                    <input type="submit" class="btn btn-primary btn-block">
                </div>
                <div class="col-5">
                    <a class="btn btn-link" href="/Account/Register">Sign Up</a>
                </div>
            </div>
        </form>
    </div>
  
</div>